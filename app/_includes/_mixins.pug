//- INCLUDES > MIXINS

mixin article(url, p, t, a, i)
    .card.article.card-spacer
        .jank-tape
            img(src='images/home-bluetape.png')
        a(href=url target="_blank")
            .card-content
                h4.publisher #{p}
                h1.title #{t}
                h4.author by #{a} 
                h4.info #{i} 

mixin project(color, title, description, img)
    .project-card.top(style="background-color:" + color + ";")
        .project-content
            h1 #{title}
            p #{description}
            button View more
            img(src="images/" + img)

mixin link(href, name, tooltip)
    a(target='_blank' class='orange-link' href=href title=tooltip)= name

mixin more()
    p.more Learn more <span>&rarr;</span>

mixin 3card(url, emoji, title, description)
    a(href=url).thirds-col.card
        h2 <span class='emo'>#{emoji}</span> #{title}
        p #{description}
        +more()

