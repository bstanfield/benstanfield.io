extends _plain-layout

block variables
  - const metapic = "";

block head
    - var projectName = "GIFT";
    title Gift (wrapped)

block content
    include ../includes/_nav-projects
        
    .container(style="margin-top: 120px;")
        .envelope-container
            h1 🎁
            h1 Unwrap your gift!
            p Unwrap your gift with the #[+i("secret code")] I sent you.
            .input-container
                input(type="password" id="password" placeholder="Enter secret code")

            .button-clicker
                input(class="orangebutton" type="button" value="Unwrap")
