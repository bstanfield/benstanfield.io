{
    "version": 2,
    "public": true,
    "builds": [
        {
            "src": "build.sh",
            "use": "@now/static-build",
            "config": {
                "distDir": "public"
            }   
        }
    ],
    "routes": [
        {
            "src": "^(.*)$",
            "dest": "$1.html"
        }
    ],
    "alias": [
        "benstanfield.io", "www.benstanfield.io"
    ]
}