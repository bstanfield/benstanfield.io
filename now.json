{
    "version": 2,
    "public": true,
    "builds": [
        {
            "src": "package.json",
            "use": "@now/static-build",
            "config": {
                "distDir": "public"
            }   
        }
    ],
    "routes": [
        { "src": "/(deploy).html", "dest": "/projects/$1.html" },
        { "src": "/(deploy)", "dest": "/projects/$1.html" },
        { "src": "/(coffee).html", "dest": "/projects/$1.html" },
        { "src": "/(coffee)", "dest": "/projects/$1.html" },
        { "src": "/foodforthought.html", "dest": "/projects/survey.html" },
        { "src": "/foodforthought", "dest": "/projects/survey.html" },
        { "src": "/(survey).html", "dest": "/projects/$1.html" },
        { "src": "/(survey)", "dest": "/projects/$1.html" },
        { "src": "/(survey).html", "dest": "/projects/$1.html" },
        { "src": "/(survey)", "dest": "/projects/$1.html" },
        {
            "src": "^(.*)$",
            "dest": "$1.html"
        }
    ],
    "alias": [
        "benstanfield.io", "www.benstanfield.io"
    ]
}